set realname = "Jordan Sim-Smith"
set from = "jordansimsmith@gmail.com"
set use_from = yes
set envelope_from = yes

# imap and smtp passwords from gpg
source "gpg -d ~/.mutt/passwords.gpg |"

source "~/.mutt/colours"

# Ensure TLS is enforced
set ssl_starttls = yes
set ssl_force_tls = yes

# Protocol: smtp for TLS (587), smtps for SSL (465)
set smtp_url = "smtp://jordansimsmith@gmail.com@smtp.gmail.com:587/"
set imap_user = "jordansimsmith@gmail.com"
set imap_keepalive = 900
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set record = "+[Gmail]/Sent Mail"
set postponed = "+[Gmail]/Drafts"
set header_cache = "~/.mutt/cache/headers"
set message_cachedir = "~/.mutt/cache/bodies"
set certificate_file = "~/.mutt/certificates"
set move = no

# Needed to get and display mail (imap-fetch-mail)
set editor = "vim"
set charset = "utf-8"
set record = ""
set sort = "reverse-date"
